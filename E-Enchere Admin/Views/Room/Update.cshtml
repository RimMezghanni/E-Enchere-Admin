@model E_Enchere_Admin.Models.Room

@{ ViewBag.Title = ""; }


<form asp-action="Update" enctype="multipart/form-data" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    @*Use hidden input elements to store Livre id and ExistingPhotoPath
        which we need when we submit the form and update data in the database*@
    <input hidden asp-for="IdRoom" />

    @*Bind to the properties of the LivreEditViewModel. The asp-for tag helper
        takes care of displaying the existing data in the respective input elements*@
    <div class="form-group row">
        <label asp-for="NomRoom" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NomRoom" class="form-control" placeholder="Name">
            <span asp-validation-for="NomRoom" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="NombreParticipants" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NombreParticipants" class="form-control" placeholder="Email">
            <span asp-validation-for="NombreParticipants" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="MontantEnchére" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MontantEnchére" class="form-control" placeholder="Email">
            <span asp-validation-for="MontantEnchére" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FraisRoom" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FraisRoom" class="form-control" placeholder="Email">
            <span asp-validation-for="FraisRoom" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MontantLancement" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="MontantLancement" class="form-control" placeholder="Email">
            <span asp-validation-for="MontantLancement" class="text-danger"></span>
        </div>
    </div>



    @*<div class="form-group row">
                <label asp-for="FraisRoom" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="FraisRoom class="custom-file-input form-control">
                        <label class="custom-file-label">cliquer ici pour changer la photo</label>
                    </div>
                </div>
            </div>
            <div class="form-group row col-sm-4 offset-4">
            <img src="@Model.Photo" asp-append-version="true" height="100" width="100" />
        </div>
    *@

    @*Display the existing Livre photo*@


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="Room" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>