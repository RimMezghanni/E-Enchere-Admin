
@model IEnumerable<E_Enchere_Admin.Models.Article>
<!-- fetch data from enumerate item objectlist -->
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Articles </h2>
        </div>
        <div class="col-6 text-rigth">
            <a asp-controller="Article" asp-action="Create" class="btn btn-primary"> Create new article </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">
                        Liste des Articles
                        <div class="btn-actions-pane-right">

                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th>Article</th>
                                    <th class="text-center">Description</th>
                                    <th class="text-center">Photo</th>
                                    <th class="text-center">Prix</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var article in Model)
                                {
                                    //var photoPath = "/images/" + (article.Photo ?? "noimage.jpg");

                                <tr>
                                    <td class="text-center text-muted">@article.IdArticle</td>

                                    <td>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-3">
                                                    <div class="widget-content-left">

                                                    </div>
                                                </div>
                                                <div class="widget-content-left flex2">
                                                    <div class="widget-heading"> @article.Nom</div>
                                                    <div class="widget-subheading opacity-7"> ***** </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center"> @article.Description</td>

                                    <td class="text-center"><img width="40" src="@article.Photo" alt=""></td>
                                    <td class="text-center">@article.Prix</td>

                                    <td class="text-center">
                                        <a asp-controller="Article" asp-action="Details" asp-route-id="@article.IdArticle"
                                           class="btn btn-primary btn-sm">Détails</a>
                                        <a asp-action="Update" asp-controller="Article" class="btn btn-primary btn-sm" asp-route-id="@article.IdArticle">Editer</a>
                                        <a asp-action="Delete" asp-controller="Article" class="btn btn-danger btn-sm" asp-route-id="@article.IdArticle">Supprimer</a>
                                    </td>
                                </tr>}
                            </tbody>
                        </table>
                    </div>
                    <div class="d-block text-center card-footer">

                    </div>
                </div>
            </div>
        </div>

                 
                                }
                                else
                                {
                                    <p> No articles created yet</p>
                                }
    </div>


